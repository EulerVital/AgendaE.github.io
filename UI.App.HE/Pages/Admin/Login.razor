@page "/login-account"
@inherits LoginBase

<MudPaper Class="pa-6 mx-auto mt-10" MaxWidth="400px">
    <MudText Typo="Typo.h5" Class="mb-4">Login</MudText>

    <MudTextField @bind-Value="_email" Label="Email" Variant="Variant.Filled" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Email" Class="mb-3" />

    <MudTextField @bind-Value="_password" Label="Password" Variant="Variant.Filled" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Lock" InputType="InputType.Password" Class="mb-4" />

    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoginAsync" Class="mt-4" FullWidth>Entrar</MudButton>

    @if (!string.IsNullOrEmpty(_error))
    {
        <MudAlert Severity="Severity.Error" Class="mt-2">@_error</MudAlert>
    }
</MudPaper>
